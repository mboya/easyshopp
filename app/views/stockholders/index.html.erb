<%= render :partial => "shared/header" %>

<p id="notice"><%= notice %></p>
  <%if user_signed_in? %> 
<center><h1 class="ui black header">Listing Stockholders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stockholders.each do |stockholder| %>
   
      <tr>
        <td><%= stockholder.stockholder_name %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', stockholder ,:class => "ui green button"%></td>
        <td><%= link_to 'Edit', edit_stockholder_path(stockholder), :class=>"ui blue button"%></td>
        <td><%= link_to 'Destroy', stockholder, :class=>"ui red button",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stockholder', new_stockholder_path ,:class=>"ui black button"%></center>
<%else%>
<center>"Please sign in to view this page :)<br><br>
<%= link_to 'Log In', new_user_session_path, :class =>'ui red button' %></center>
<% end %>