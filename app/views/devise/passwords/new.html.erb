<%= render :partial => "shared/header" %>

<div class="ui inverted segment" style="margin-left:400px ; margin-right: 400px;border-radius: 10px; margin-top: 100px;">
  <div class="ui inverted form">
  <h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="ui blue submit button">
    <% f.submit "Send me reset password instructions" %> Send me reset password instructions
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
